pipeline {
    agent any
    environment { 
        NAME = "shopdata-jenkins"
        VERSION = "${env.BUILD_ID}-${env.GIT_COMMIT}"
        IMAGE = "${NAME}:${VERSION}"
        DOCKERHUB_CREDS = credentials('gagan163264')
    }
    stages {
        stage('Build') {
            steps {
                dir("shopdataservice") {
                    echo "Running ${VERSION} on ${env.JENKINS_URL}"
                    bat "./gradlew clean bootJar"
                    echo "Building Docker image ${IMAGE}"
                    bat "docker build -t ${IMAGE} ."
                    bat "docker tag ${NAME}:latest ${NAME}:${VERSION}"
                }
            }
        }
        stage('Test') {
            steps {
                echo 'NO tests defined'
            }
        }
        stage('Deploy') {
            steps {
                echo "Pushing Docker image ${IMAGE} to DockerHub"
                echo "${DOCKERHUB_CREDS_USR} ${DOCKERHUB_CREDS_PSW}"
            }
        }
    }
}